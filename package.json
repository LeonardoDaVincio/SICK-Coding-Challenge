{
    "name": "hello-world-angular",
    "displayName": "hello-world-angular",
    "description": "A hello world sample extension to demonstrate using Angular with the Webview UI Toolkit for VS Code.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:hello-world.showHelloWorld"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [{
            "command": "hello-world.showHelloWorld",
            "title": "Hello World (Angular): Show"
        }]
    },
    "scripts": {
        "install:all": "npm install && cd webview-ui && npm install",
        "start:webview": "cd webview-ui && npm run start",
        "build:webview": "cd webview-ui && npm run build",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "ts-loader": "^9.4.1",
        "typescript": "^4.9.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0"
    }
}